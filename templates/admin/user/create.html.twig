{% extends 'base.html.twig' %}

{% block title %}Créer un compte vendeuse{% endblock %}

{% block body %}
    <h1 class="mb-4">➕ Création d'une vendeuse</h1>

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.username, 'Nom d’utilisateur') }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.username) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.password, 'Mot de passe') }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.confirmPassword, 'Confirmer le mot de passe') }}
        {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.confirmPassword) }}
    </div>

    <button class="btn btn-primary">✅ Créer le compte</button>
    <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary ms-2">↩ Retour</a>
    {{ form_end(form) }}
{% endblock %}
