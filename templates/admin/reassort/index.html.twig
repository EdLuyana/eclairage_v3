{% extends 'base.html.twig' %}

{% block title %}R√©assort{% endblock %}

{% block body %}
    <a href="{{ path('admin_reassort_batch') }}" class="btn btn-outline-secondary mb-3">
        üì¶ Passer au r√©assort en lot
