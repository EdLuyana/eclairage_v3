    <h1 class="mb-4">üì¶ R√©assort produit</h1>

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="card p-4 shadow-sm mb-4 position-relative">
        <form method="get" action="{{ path('admin_reassort_start') }}">
            <label for="reference" class="form-label">R√©f√©rence produit</label>
            <div class="position-relative">
                <input type="text" id="reference" name="reference" class="form-control" placeholder="ex : Fournisseur_Ete2025_Robe_bleue" value="{{ reference }}" autocomplete="off">
            </div>
            <button class="btn btn-primary mt-3" type="submit">Rechercher</button>
        </form>
    </div>

    {% if product %}
        <div class="card p-4 shadow-sm">
            <h5 class="mb-3">Produit trouv√© :</h5>
            <ul>
                <li><strong>Nom :</strong> {{ product.name }}</li>
                <li><strong>Couleur :</strong> {{ product.color }}</li>
                <li><strong>Collection :</strong> {{ product.season.name }}</li>
                <li><strong>Fournisseur :</strong> {{ product.supplier.name }}</li>
            </ul>

            <hr>

            <h5 class="mt-4">Quantit√© par taille √† redistribuer</h5>
            <form method="post" action="{{ path('admin_reassort_distribute') }}">
                {# üî¥ Champ indispensable pour passer la r√©f√©rence au contr√¥leur suivant #}
                <input type="hidden" name="reference" value="{{ product.reference }}">

                <div class="row g-2">
                    {% for size in productSizes %}
                        <div class="col-4 col-md-2">
                            <label class="form-label">{{ size.value }}</label>
                            <input type="number" name="sizes[{{ size.value }}]" min="0" class="form-control" value="0">
                        </div>
                    {% endfor %}
                </div>
                <button class="btn btn-success mt-3">Suivant : r√©partir par magasin</button>
            </form>
        </div>
    {% endif %}

    <script>
        window.autocompleteUrl = "{{ path('admin_reassort_autocomplete') }}";
    </script>
{% endblock %}
