{% block title %}R√©partition des produits{% endblock %}

{% block body %}
    <h1 class="mb-4">üì¶ R√©partition des produits par magasin</h1>

    <div class="card p-4 shadow-sm mb-4">
        <form method="post" action="{{ path('admin_reassort_review') }}">

            {% for item in products %}
                {% set product = item.product %}
                {% set sizes = item.sizes %}

                <input type="hidden" name="reference[]" value="{{ product.reference }}">
                <h5 class="mb-3 mt-4 text-primary">üõç {{ product.name }} ‚Äî R√©f : {{ product.reference }}</h5>

                {% for size, qty in sizes %}
                    {% set qty = qty|default(0) %}
