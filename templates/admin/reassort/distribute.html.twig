                            <h6 class="mb-3">Taille <strong>{{ size }}</strong> ‚Äî Quantit√© √† r√©partir : <strong>{{ qty }}</strong></h6>
                            <input type="hidden" name="sizes[{{ product.reference }}][{{ size }}]" value="{{ qty }}">

                            <div class="row g-2">
                                {% for location in locations %}
                                    <div class="col-6 col-md-3">
                                        <label class="form-label">{{ location.name }}</label>
                                        <input type="number"
                                               name="distributions[{{ product.reference }}][{{ size }}][{{ location.id }}]"
                                               class="form-control"
                                               min="0"
                                               max="{{ qty }}"
                                               value="0">
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-success btn-lg">
                    ‚úÖ Valider le r√©assort
                </button>
            </div>
        </form>
    </div>
{% endblock %}
