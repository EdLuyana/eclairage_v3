{# templates/admin/stock/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Consultation des stocks{% endblock %}

{% block body %}
    <div class="container py-4">
        <h2 class="mb-4 text-center">
            üè¶ Consultation des stocks
        </h2>

        <form method="get" class="row mb-4">
            <div class="col-md-6">
                <label for="location">Magasin</label>
                <select name="location" id="location" class="form-select">
                    <option value="">Tous les magasins</option>
                    {% for loc in locations %}
                        <option value="{{ loc.id }}" {% if locationId == loc.id %}selected{% endif %}>{{ loc.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button class="btn btn-primary w-100">üîç Filtrer</button>
            </div>
        </form>

        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>R√©f√©rence</th>
                <th>Magasin</th>
                <th>Tailles</th>
                <th>Ventes (30j)</th>
            </tr>
            </thead>
            <tbody>
            {% for row in grouped %}
                <tr>
                    <td>{{ row.reference }}</td>
                    <td>{{ row.location }}</td>
                    <td>
                        <div class="d-flex flex-wrap gap-1">
                            {% for item in row.sizes %}
                                {% set size = item.size %}
                                {% set qty = item.quantity %}
                                <span class="badge
    {% if qty == 0 %}bg-danger
    {% elseif qty == 1 %}bg-warning text-dark
    {% else %}bg-success
    {% endif %}">
    {{ size }} ({{ qty }})
</span>
                            {% endfor %}
                        </div>
                    </td>
                    <td>{{ row.sales }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
