{% extends 'base.html.twig' %}

{% block title %}Cr√©ation produit & √©l√©ments li√©s{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .size-group {
            margin-bottom: 1rem;
        }
        .size-group legend {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .checkbox-inline {
            display: inline-block;
            margin-right: 10px;
            margin-bottom: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1 class="mb-4">Cr√©er un produit ou un √©l√©ment li√©</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm p-4 mb-4">
                <h5 class="mb-3">üßæ Formulaire produit</h5>
                {{ form_start(form) }}

                {{ form_row(form.name) }}
                {{ form_row(form.color) }}
                {{ form_row(form.price) }}
                {{ form_row(form.category) }}
                {{ form_row(form.supplier) }}
                {{ form_row(form.season) }}

                <div class="mb-3">
                    <label class="form-label">Tailles disponibles</label>

                    <fieldset class="size-group">
                        <legend>Taille alphab√©tique (XS √† XXL)</legend>
                        {% for choice in form.sizes %}
                            {% if choice.vars.label in ['XS','S','M','L','XL','XXL'] %}
                                <div class="form-check form-check-inline checkbox-inline">
                                    {{ form_widget(choice) }}
                                    {{ form_label(choice) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </fieldset>

                    <fieldset class="size-group">
                        <legend>Taille num√©rique (32 √† 52)</legend>
                        {% for choice in form.sizes %}
                            {% if choice.vars.label matches '/^3[2-9]$|^4[0-9]$|^50$|^52$/' %}
                                <div class="form-check form-check-inline checkbox-inline">
                                    {{ form_widget(choice) }}
                                    {{ form_label(choice) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </fieldset>

                    <fieldset class="size-group">
                        <legend>Taille unique</legend>
                        {% for choice in form.sizes %}
                            {% if choice.vars.label == 'U' %}
                                <div class="form-check form-check-inline checkbox-inline">
                                    {{ form_widget(choice) }}
                                    {{ form_label(choice) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </fieldset>
                </div>

                <button class="btn btn-primary mt-3">Enregistrer le produit</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-4 mb-4">
                <h5 class="mb-3">‚ûï Ajouter un √©l√©ment li√©</h5>
                <select id="linked-form-selector" class="form-select mb-3">
                    <option value="">S√©lectionner un √©l√©ment √† ajouter</option>
                    <option value="supplier">Fournisseur</option>
                    <option value="category">Cat√©gorie</option>
                    <option value="season">Collection</option>
                </select>

                <div id="linked-form-container">
                    <!-- Formulaire li√© charg√© dynamiquement -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
