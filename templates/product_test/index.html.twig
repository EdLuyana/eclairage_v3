{% extends 'base.html.twig' %}

{% block title %}Test Produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Couleur</th>
            <th>Taille</th>
            <th>Prix</th>
            <th>Référence</th>
            <th>Fournisseur</th>
            <th>Collection</th>
            <th>Statut</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.color }}</td>
                <td>{{ product.size }}</td>
                <td>{{ product.price }} €</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.supplier.name }}</td>
                <td>{{ product.season.name }}</td>
                <td>{{ product.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun produit trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
