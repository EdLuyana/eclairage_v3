{% extends 'base.html.twig' %}

{% block title %}Consultation du stock{% endblock %}

{% block body %}
    <div class="container py-4">
        <h2 class="text-center mb-4">Consulter le stock</h2>

        {# Formulaire de scan/saisie #}
        <form method="get" class="mb-4">
            <div class="col-md-8 col-lg-6 mx-auto">
                <div class="input-group">
                    <input type="text" id="reference" name="reference" value="{{ reference }}" class="form-control form-control-lg" placeholder="Scanner ou saisir la r√©f√©rence produit" required>
                    <button class="btn btn-primary btn-lg" type="submit">Rechercher</button>
                </div>
            </div>
        </form>

        {% if product %}
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="mb-1">{{ product.name }}</h4>
                    <p class="mb-0">R√©f√©rence : {{ product.reference }} | Couleur : {{ product.color }}</p>
                </div>
            </div>

            {% if stockMap is not empty %}
                {% for locationName, sizes in stockMap %}
                    <div class="card mb-3">
                        <div class="card-header fw-bold text-uppercase">
                            üè™ {{ locationName }}
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                {% for size, qty in sizes %}
                                    <span class="badge fs-6 py-2 px-3
                                    {% if qty == 0 %} bg-danger
                                    {% elseif qty == 1 %} bg-warning text-dark
                                    {% else %} bg-success
                                    {% endif %}">
                                    {{ size }} ({{ qty }})
                                </span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning">Aucun stock trouv√© pour ce produit.</div>
            {% endif %}
        {% elseif reference %}
            <div class="alert alert-danger">R√©f√©rence introuvable.</div>
        {% endif %}

        <div class="text-center mt-4">
            <a href="{{ path('user_dashboard') }}" class="btn btn-link">‚¨Ö Retour au tableau de bord</a>
        </div>
    </div>

    <script>
        window.autocompleteUrl = "{{ path('user_check_stock_autocomplete') }}";
    </script>
{% endblock %}
